{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/src",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "types": [
      "node",
      "jest",
      "express"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "exclude": [
    "*.js",
    "*.ts",
    "src/_*.ts",
    "./coverage/*",
  ]
}